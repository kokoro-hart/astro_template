{
  "name": "astro-basic-template",
  "version": "0.1.1",
  "license": "MIT",
  "private": true,
  "author": "kokoro tobita <cocosyu.11261126@gmail.com>",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "lint:es": "eslint --cache 'src/**/*.{astro,js,ts,json}'",
    "lint:style": "stylelint 'src/**/*.scss'",
    "lint:html": "markuplint \"src/**/*.astro\"",
    "prepare": "husky install",
    "check-types": "tsc --project tsconfig.json --pretty --noEmit",
    "validate": "npm run check-types && lint-staged --no-stash"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix --cache"
    ],
    "**/*.scss": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{astro,js,ts,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/sitemap": "^1.2.2",
    "astro": "^2.0.11"
  },
  "devDependencies": {
    "@astrojs/image": "^0.15.0",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@markuplint/astro-parser": "^3.6.3",
    "@rollup/plugin-yaml": "^4.0.1",
    "@types/node": "^18.11.18",
    "@types/postcss-preset-env": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "astro-compress": "^1.1.25",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-astro": "^0.21.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "8.0.2",
    "lint-staged": "13.0.3",
    "markuplint": "^3.9.1",
    "postcss": "^8.4.20",
    "postcss-html": "^1.5.0",
    "postcss-preset-env": "^7.8.3",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.1",
    "prettier-plugin-astro": "^0.7.2",
    "sass": "^1.57.1",
    "sharp": "^0.31.3",
    "stylelint": "14.16.1",
    "stylelint-config-html": "1.1.0",
    "stylelint-scss": "4.4.0"
  }
}
