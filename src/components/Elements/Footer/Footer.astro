---
import style from "./Footer.module.scss"
import FooterMenu from "./FooterMenu/FooterMenu.astro"
import type { Nav } from "./types/"

import { getPaths } from "@/utils/getPaths"

const { root, about, works, faq, contact } = getPaths()

const nav: Array<Nav> = [
  {
    name: "TOP",
    path: root,
  },
  {
    name: "ABOUT",
    path: about,
  },
  {
    name: "WORKS",
    path: works,
  },
  {
    name: "FAQ",
    path: faq,
  },
  {
    name: "CONTACT",
    path: contact,
  },
]
---

<footer class={style.footer}>
  <div class={style.footer__inner}>
    <div class={style.footer__nav}>
      <FooterMenu nav={nav} />
    </div>
    <small class={style.footer__copy}>&copy; company name</small>
  </div>
</footer>
