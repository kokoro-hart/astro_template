---
import type { HTMLAttributes } from "astro/types"

import type { Nav } from "../types/"

import style from "./HeaderMenu.module.scss"

export type Props = HTMLAttributes<"nav"> & {
  nav: Array<Nav>
}

const { nav, ...props } = Astro.props
---

<nav class={style.headerMenu} aria-label="global navigation" {...props}>
  <ul class={style.headerMenu__list}>
    {
      nav.map(({ name, path }) => (
        <li class={style.headerMenu__item}>
          <a href={path} class={style.headerMenu__link}>
            {name}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
