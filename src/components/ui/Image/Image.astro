---
import type { SomeRequired } from "@/utils";
import type { HTMLAttributes } from "astro/types";

type Props = SomeRequired<HTMLAttributes<"img">, "src" | "width" | "height">;

const { loading = "lazy", decoding = "async", alt = "", ...props } = Astro.props;
---

<img loading={loading} decoding={decoding} alt={alt} {...props} />
