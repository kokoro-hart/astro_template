{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.astro"],
  "exclude": ["node_modules"]
}
