{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "importsNotUsedAsValues": "error",
    "downlevelIteration": true
  },
  "include": ["**/*.ts", "**/*.astro"],
  "exclude": ["node_modules"]
}
